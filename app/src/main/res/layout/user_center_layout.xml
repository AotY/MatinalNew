<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/u_cent_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user_center_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/u_cter_tou_rl"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="17dp">

        <ImageView
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:background="@drawable/tou_bg_login"
            android:scaleType="centerCrop" />

        <com.aoty.matinalnew.view.CircleImageView
            android:id="@+id/u_cter_user_img_photo"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/defalut_tou_img" />
    </RelativeLayout>


    <TextView
        android:id="@+id/u_cter_user_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="74dp" />

    <LinearLayout
        android:id="@+id/u_cter_text_ll"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/first_left_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/u_cter_tv_collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="收藏"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/u_cter_tv_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="消息"
            android:textColor="#fff"  />

        <TextView
            android:id="@+id/u_cter_tv_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="订阅"
            android:textColor="#fff"  />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/u_cter_fram"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

</LinearLayout>