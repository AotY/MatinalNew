<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">


    <ImageView
        android:id="@+id/list_item_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/xiaotu"
        android:layout_width="100dp"
        android:layout_height="80dp" />


    <TextView
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:id="@+id/list_item_text_title"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:layout_alignTop="@+id/list_item_img"
        android:layout_toRightOf="@+id/list_item_img"
        android:text="这是一条小尾巴"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_alignBottom="@+id/list_item_img"
        android:textSize="14sp"
        android:layout_marginLeft="8dp"
        android:lines="2"
        android:layout_marginTop="8dp"
        android:id="@+id/list_item_text_brief"
        android:layout_toRightOf="@+id/list_item_img"
        android:layout_below="@+id/list_item_text_title"
        android:textColor="#292929"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
